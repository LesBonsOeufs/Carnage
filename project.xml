<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta version="2.0.0" package="com.bernabeugabriel.onebutton" title="BERNABEU Gabriel OneButton" company="Isart Digital"/>
	<app file="OneButton" path="bin" main="com.isartdigital.onebutton.Main"/>
	
	<icon path="icon.png" />

	<source path="src"/>
	<haxelib name="openfl"/>
	<haxelib name="actuate"/>
	<haxelib name="zame-particles"/>
	<haxelib name="dat.GUI"/>
	<haxelib name="OpenFl-Animate-Atlas-Player"/>
	
	<certificate path="bin/key.jks" password="${ANDROID_KEY_PASSWORD}" alias="${ANDROID_KEY_ALIAS}" alias-password="${ANDROID_KEY_ALIAS_PASSWORD}" />
	
	<assets embed="false" path="assets"/>
	<assets embed="true" path="assets/config.json"/>
	<assets embed="true" path="assets/settings/player.json"/>
	<assets embed="true" path="assets/sounds/sounds.json"/> 

	<library preload="true" path="assets/libraries/loader.swf"/>

	<library preload="false" path="assets/libraries/ui.swf"/> 
	<library preload="false" path="assets/libraries/assets.swf"/>
	
	<section if="html5">
		<dependency path="assets/lib/dat.gui.min.js"/>
	</section>
	
	
	<window orientation="landscape" background="#90908e" fps="90"/>
	<window hardware="true" resizable="true" anti-aliasing="0" vsync="false" stencil-buffer="true" allow-shaders="true" require-shaders="true" depth-buffer="false"/>
	<window if="android" fullscreen="true" resizable="false"/>
	<window if="windows" width="1200" height="700" resizable="false"/>
	
</project>